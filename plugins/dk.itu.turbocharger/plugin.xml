<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            default-charset="UTF-8"
            file-extensions="djava"
            id="dk.itu.turbocharger:contentType.djava"
            name="Decorated Java source"
            priority="normal">
      </content-type>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="dk.itu.turbocharger.java.ui.DecoratedJavaEditor"
            default="false"
            extensions="djava"
            icon="icons/djava.gif"
            id="dk.itu.turbocharger:editor.djava"
            name="Decorated Java Editor">
         <contentTypeBinding
               contentTypeId="dk.itu.turbocharger:contentType.djava">
         </contentTypeBinding>
      </editor>
   </extension>
   <extension
         id="dk.itu.coqoon.turbocharger:marker:java"
         name="Java problem"
         point="org.eclipse.core.resources.markers">
      <persistent
            value="true">
      </persistent>
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
   </extension>

</plugin>
